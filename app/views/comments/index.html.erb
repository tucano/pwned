<% content_for(:style) do %>
  <%= stylesheet_link_tag 'mf54_reset' %>
	<%= stylesheet_link_tag 'mf54_grid' %>
  <%= stylesheet_link_tag 'mf54_content' %>
	<%= stylesheet_link_tag 'pwned' %>
<% end %>

<% content_for(:navbar) do %>
  <%= render :partial => 'shared/menu_user' %>
  <%= render :partial => 'shared/menu_networks' %>
  <%= render :partial => 'shared/menu_help' %> 
<% end %>

<!-- PAGE TITLE -->
<h1 class="pagetitle">Comments for <%= @network.name %></h1>

<div id="notice">
	<p style="color: green"><%= flash[:notice] %></p>
</div>

<!-- C.1 CONTENT -->
<div class="content">
  <!-- LIST CELL -->
	<div class="corner-content-1col-top"></div>
	<div class="content-1col-nobox">
    <h1>Listing comments for <%= @network.name %></h1>

    <table>
      <tr>
        <th>Network</th>
        <th>Body</th>
      </tr>

    <% for comment in @comments %>
      <tr>
        <td><%=h comment.network.name %></td>
        <td><%=h comment.body %></td>
        <td><%= link_to 'Show', [@network, comment] %></td>
        <td><%= link_to 'Edit', [:edit, @network, comment] %></td>
        <td><%= link_to 'Destroy', [@network, comment], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <p><%= link_to 'New comment', new_network_comment_path(@network) %></p>
  </div>
  <div class="corner-content-1col-bottom"></div>
</div>

<!-- C.2 SUBCONTENT -->
<div class="subcontent">
	<%= render(:partial => 'shared/login') %>
	<%= render(:partial => 'shared/search') %>	
	<%= render(:partial => 'shared/news') %>	
</div>