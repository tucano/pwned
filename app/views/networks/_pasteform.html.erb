<% form_for(@network, :html => { :multipart => true }) do |f| %>
  <p>
    <%= f.label :name, 'Network Name' %><br />
    <%= f.text_field :name, :class => "input" %>
  </p>
  <p>
    <%= f.label :description, 'Description' %><br />
    <%= f.text_area :description, :size => "50x10", :class => "input" %>
  </p>
  <p>
  	<%=  button_to_function "Annotation", "Effect.toggle('paste-annotations', 'blind',{ duration: 0.5 })", {:class => 'button'} %>
  </p>
  <p>
    <%= label_tag 'config', 'Configuration' -%>
    <% options = options_for_select @templates %>
    <%= select_tag 'config' , options  -%>
  </p>

  <div id="paste-edges">
    <p>
      <%= label_tag 'edges', 'Edges' %><br />
      <%= text_area_tag 'edges' , nil, :size => "50x10", :class => "input" %>
    </p>
  </div>
  <div id="paste-annotations" style="display:none">
    <p>
      <%= label_tag 'annotations', 'Annotation' %><br />
      <%= text_area_tag 'annotations' , nil, :size => "50x10", :class => "input"  %>
    </p>
  </div>

  <p>
  <%= f.submit "Create", :class => "submit" %>
  </p>

<% end %>

