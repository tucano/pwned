<% content_for(:style) do %>
  <%= stylesheet_link_tag 'mf54_reset' %>
	<%= stylesheet_link_tag 'mf54_grid' %>
  <%= stylesheet_link_tag 'mf54_content' %>
	<%= stylesheet_link_tag 'pwned' %>
<% end %>

<% content_for(:navbar) do %>
  <%= render :partial => 'menu_user' %>
  <%= render :partial => 'menu_networks' %>
  <%= render :partial => 'menu_help' %> 
<% end %>

<!-- PAGE TITLE -->
<h1 class="pagetitle"><%= page_entries_info @pages %></h1>

<div id="notice">
	<p style="color: green"><%= flash[:notice] %></p>
</div>

<!-- C.1 CONTENT -->
<div class="content">
	
	<!-- NETWORKS LIST CELL -->
	<div class="corner-content-1col-top"></div>
	<div class="content-1col-nobox">
		
		<% if @pages.total_pages <= 1 then %>
			<h1>Networks</h1>
		<% else %>
			<h1><%= will_paginate @pages %></h1>
		<% end %>
		
		<% for network in @pages %>
		  <%= render :partial => 'inline_network', :locals => { :network => network } %>
		<% end %>
		
	</div>
	<div class="corner-content-1col-bottom"></div>
		
</div>

<!-- C.2 SUBCONTENT -->
<div class="subcontent">
	<%= render(:partial => 'login') %>
	<%= render(:partial => 'search') %>	
	<%= render(:partial => 'news') %>	
</div>